<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Propriedades</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <%- include("partials/header") %>
    
    <div class="container mt-4">
        <h1 class="mb-4">Propriedades Cadastradas</h1>
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group">
                    <% propriedades.forEach(propriedade => { %>
                        <li class="list-group-item">
                            <strong>ID:</strong> <%= propriedade.id %><br>
                            <strong>Valor:</strong> R$ <%= propriedade.valor %><br>
                            <strong>Cliente ID:</strong> <%= propriedade.cliente_ID %><br>
                            <strong>Corretor ID:</strong> <%= propriedade.corretor_Id %><br>
                            <strong>Endereço:</strong> <%= propriedade.rua %> <%= propriedade.numero %><br>
                            <strong>Bairro:</strong> <%= propriedade.bairro %><br>
                            <strong>Cidade:</strong> <%= propriedade.cidade %><br>
                            <strong>Estado:</strong> <%= propriedade.estado %><br>
                            <strong>País:</strong> <%= propriedade.pais %><br>
                            <strong>CEP:</strong> <%= propriedade.cep %><br>
                            <strong>Tipo:</strong> <%= propriedade.tipo %><br>
                            <strong>Área (m²):</strong> <%= propriedade.area_m2 %><br>
                            <strong>Disponibilidade:</strong> <%= propriedade.disponibilidade %><br>
                            
                            <form id="updateForm_<%= propriedade.id %>" class="mt-2" onsubmit="atualizaPropriedade('<%= propriedade.id %>'); return false;">
                                <div class="form-group">
                                    <label for="valor_<%= propriedade.id %>">Novo Valor:</label>
                                    <input type="number" class="form-control" id="valor_<%= propriedade.id %>" name="valor" placeholder="Novo valor" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Atualizar</button>
                            </form>
                            <form id="deleteForm_<%= propriedade.id %>" class="mt-2">
                                <button type="button" class="btn btn-danger" onclick="deletaPropriedade('<%= propriedade.id %>')">Deletar</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
        <a href="/cadastraPropriedade" class="btn btn-primary mt-3">Cadastrar Nova Propriedade</a>
    </div>

    <script>
        function deletaPropriedade(propriedadeId) {
            if (confirm("Tem certeza que deseja excluir esta propriedade? Esta ação é irreversível.")) {
                fetch(`/propriedade/${propriedadeId}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        alert("Propriedade removida com sucesso!");
                        location.reload();
                    } else {
                        alert("Erro ao remover propriedade");
                    }
                })
                .catch(error => {
                    console.error('Erro ao enviar solicitação:', error);
                    alert("Erro ao remover propriedade");
                });
            }
        }

        function atualizaPropriedade(propriedadeId, dadosAtualizados) {
    if (confirm("Tem certeza que deseja atualizar esta propriedade?")) {
        fetch(`/propriedade/${propriedadeId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(dadosAtualizados)
        })
        .then(response => {
            if (response.ok) {
                alert("Propriedade atualizada com sucesso!");
                location.reload(); // Recarrega a página após a atualização
            } else {
                alert("Erro ao atualizar propriedade");
            }
        })
        .catch(error => {
            console.error('Erro ao enviar solicitação:', error);
            alert("Erro ao atualizar propriedade");
        });
    }
}

    </script>
</body>
</html>
